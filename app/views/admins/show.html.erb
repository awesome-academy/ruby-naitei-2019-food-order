<% provide :title, t("admin_panel") %>
<%= render "shared/admin_header" %>
<%= render "shared/admin_sidenav" %>

<main role="main">
  <p id="notice"><%= notice %></p>
  <p>
    <strong>Username:</strong>
    <%= @admin.username %>
  </p>
  <p>
    <strong>Password:</strong>
    <%= @admin.password %>
  </p>
  <%= link_to t("edit"), edit_admin_path(@admin) %> |
  <%= link_to t("back"), admins_path %>
</main>
